<div class="container">

  <h1>Activity Shifts</h1>

  <%= link_to 'New Shift', new_shift_path, class: "btn btn-primary btn-block" %>

<div class="container">  
  <table class="table table-striped">
    <thead>
      <tr>
	<th>Day</th>
	<th></th>
	<th></th>
	<th></th>
      </tr>
    </thead>

    <tbody>
      <% @shifts.each do |shift| %>
	<tr>
          <td><%= shift.title %></td>
          <td><%= link_to 'Show', shift %></td>
          <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
          <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>

  <br>

  <%= link_to 'New Shift', new_shift_path %>
</div>
